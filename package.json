{
    "name": "pressbox",
    "version": "1.0.0",
    "description": "Cross-platform local WordPress development environment - Alternative to LocalWP",
    "main": "src/main/main-quick.js",
    "homepage": "./",
    "author": "PressBox Team",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
        "dev:electron": "cross-env NODE_ENV=development electron-forge start",
        "dev:react": "cross-env BROWSER=none vite",
        "build": "npm run build:react && npm run build:electron",
        "build:react": "vite build",
        "build:electron": "tsc -p tsconfig.main.json",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "type-check": "tsc --noEmit",
        "clean": "rimraf dist build out .webpack",
        "test": "echo \"Tests not yet implemented\" && exit 0",
        "prestart": "npm run clean",
        "start": "npm run dev",
        "package:win": "electron-forge package --platform=win32",
        "package:mac": "electron-forge package --platform=darwin",
        "package:linux": "electron-forge package --platform=linux",
        "make:all": "electron-forge make --platform=win32,darwin,linux"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "PressBox",
                "executableName": "pressbox",
                "icon": "./assets/icon",
                "extraResource": [
                    "./assets"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "PressBox"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "pressbox",
                            "name": "pressbox"
                        }
                    }
                }
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.4.0",
        "@electron-forge/maker-deb": "^7.4.0",
        "@electron-forge/maker-rpm": "^7.4.0",
        "@electron-forge/maker-squirrel": "^7.4.0",
        "@electron-forge/maker-zip": "^7.4.0",
        "@electron-forge/publisher-github": "^7.4.0",
        "@types/dockerode": "^3.3.44",
        "@types/node": "^20.14.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^31.0.2",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "typescript": "^5.4.5",
        "vite": "^5.3.1"
    },
    "dependencies": {
        "@heroicons/react": "^2.1.3",
        "@tailwindcss/forms": "^0.5.7",
        "clsx": "^2.1.1",
        "dockerode": "^4.0.2",
        "electron-store": "^10.0.0",
        "electron-updater": "^6.2.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.23.1",
        "tailwind-merge": "^2.3.0",
        "tailwindcss": "^3.4.4",
        "uuid": "^10.0.0"
    }
}
